{
  "extends": "./tsconfig.json",
  "include": [
    "src",
  ],
  "exclude": [
    "coverage",
    "dist",
    "node_modules",
    "test",
  ],
  "compilerOptions": {
    "target": "es2018",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "test/*": [
        "test/*"
      ]
    }
  }
}
